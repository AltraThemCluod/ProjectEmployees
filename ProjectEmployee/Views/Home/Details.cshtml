@using ProjectEmployee.Models;
@model Employee;

@{
    ViewData["Title"] = "Employee Details";
}
@Html.AntiForgeryToken()
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Employee Details</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Manage Employee</a></li>
                            <li class="breadcrumb-item active">Employee Details</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-12">
                <div class="card">
                    <div class="card-header p-2 d-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Employee Details</h4>
                            <p class="card-title-desc">
                                You can create and update employee details
                            </p>
                        </div>
                    </div>
                   <div class="card-body">
                       <div class="row">
                           @using (Html.BeginForm("SaveEmployeeDetails", "Home", FormMethod.Post, new { @class = "row", @id = "employee_form", @enctype = "multipart/form-data" }))
                           {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Id)
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Department</label>
                                    @Html.DropDownListFor(m => m.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.Department, "Select a Department", new { @Id = "DepartmentId", @name = "DepartmentId", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DepartmentId, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">User Name</label>
                                    @Html.TextBoxFor(m => m.Name, new { @type = "text", @class = "form-control", @name = "Name", @id = "Name" })
                                    @Html.ValidationMessageFor(m => m.Name, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Email</label>
                                    @Html.TextBoxFor(m => m.Email, new { @type = "text", @class = "form-control", @name = "Email", @id = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Password</label>
                                    @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @name = "Password", @id = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Birth Date</label>
                                    @Html.TextBoxFor(m => m.BirthDate, new { @type = "date", @class = "form-control", @name = "BirthDate", @id = "BirthDate" })
                                    @Html.ValidationMessageFor(m => m.BirthDate, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Joining Date</label>
                                    @Html.TextBoxFor(m => m.JoiningDate, new { @type = "date", @class = "form-control", @name = "JoiningDate", @id = "JoiningDate" })
                                    @Html.ValidationMessageFor(m => m.JoiningDate, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Salary</label>
                                    @Html.TextBoxFor(m => m.Salary, new { @type = "number", @class = "form-control", @name = "Salary", @id = "Salary" })
                                    @Html.ValidationMessageFor(m => m.Salary, "")
                                </div>
                                <div class="col-lg-3 mb-3">
                                    <label class="form-label">Profile Image</label>
                                    @Html.TextBoxFor(m => m.ProfileImage, new { @type = "file", @class = "form-control", @name = "ProfileImage", @id = "ProfileImage" })
                                    @Html.ValidationMessageFor(m => m.ProfileImage, "")
                                </div>

                                <div class="col-lg-12 text-end mt-3">
                                    <button class="btn btn-primary waves-effect waves-light button w-md" type="submit">Save Details</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- container-fluid -->
</div>